---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import PortfolioGrid from '../../../components/PortfolioGrid';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';
import { mockHomePage } from '../../../cms/mock/home';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get portfolio section from mock data
const portfolioSection = mockHomePage.portfolio[lang];
---

<BaseLayout
  title="Our Portfolio | PLANY"
  description="Explore our portfolio of commercial and residential fit-out projects, including offices, retail spaces, apartments, and more."
>
  <div class="container mx-auto py-12">
    <header class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{portfolioSection.title}</h1>
      <p class="text-xl text-text-light max-w-3xl mx-auto">{portfolioSection.subtitle}</p>
    </header>
    
    <PortfolioGrid url={Astro.url} client:load />
    
    <!-- CTA Section -->
    <div class="mt-20 bg-primary text-white p-12 rounded-lg text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Start Your Project?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">Contact us today to discuss your vision and receive a free consultation and quote.</p>
      <a 
        href={`/${lang}/contact`} 
        class="inline-block px-8 py-4 bg-secondary text-white rounded-md hover:bg-secondary-dark transition-colors duration-200 font-medium"
      >
        Get in Touch
      </a>
    </div>
  </div>
</BaseLayout>
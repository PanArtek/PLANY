              <h3 class="text-xl font-semibold mb-2">{t('process.step3.title' as any)}</h3>
              <p class="text-text-light">{t('process.step3.description' as any)}</p>
            </div>
            <div class="order-1 md:order-2 z-10 flex items-center justify-center w-12 h-12 rounded-full bg-secondary text-white font-bold mb-4 md:mb-0">
              3
            </div>
            <div class="order-3 md:w-5/12 hidden md:block"></div>
          </div>
          
          <div class="relative flex flex-col md:flex-row items-center md:justify-between md:space-x-8">
            <div class="order-2 md:order-1 md:w-5/12 hidden md:block"></div>
            <div class="order-1 md:order-2 z-10 flex items-center justify-center w-12 h-12 rounded-full bg-secondary text-white font-bold mb-4 md:mb-0">
              4
            </div>
            <div class="order-3 md:w-5/12">
              <h3 class="text-xl font-semibold mb-2">{t('process.step4.title' as any)}</h3>
              <p class="text-text-light">{t('process.step4.description' as any)}</p>
            </div>
          </div>
          
          <div class="relative flex flex-col md:flex-row items-center md:justify-between md:space-x-8">
            <div class="order-2 md:order-1 md:w-5/12 md:text-right">
              <h3 class="text-xl font-semibold mb-2">{t('process.step5.title' as any)}</h3>
              <p class="text-text-light">{t('process.step5.description' as any)}</p>
            </div>
            <div class="order-1 md:order-2 z-10 flex items-center justify-center w-12 h-12 rounded-full bg-secondary text-white font-bold mb-4 md:mb-0">
              5
            </div>
            <div class="order-3 md:w-5/12 hidden md:block"></div>
          </div>
          
          <div class="relative flex flex-col md:flex-row items-center md:justify-between md:space-x-8">
            <div class="order-2 md:order-1 md:w-5/12 hidden md:block"></div>
            <div class="order-1 md:order-2 z-10 flex items-center justify-center w-12 h-12 rounded-full bg-secondary text-white font-bold mb-4 md:mb-0">
              6
            </div>
            <div class="order-3 md:w-5/12">
              <h3 class="text-xl font-semibold mb-2">{t('process.step6.title' as any)}</h3>
              <p class="text-text-light">{t('process.step6.description' as any)}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="testimonials" class="section bg-white">
    <div class="container">
      <div class="section-title">
        <h2>{t('testimonials.title' as any)}</h2>
        <p class="text-xl text-text-light mt-4">{t('testimonials.subtitle' as any)}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full bg-gray-200 mr-4"></div>
            <div>
              <h4 class="font-semibold">John Smith</h4>
              <p class="text-sm text-text-light">CEO, Tech Solutions</p>
            </div>
          </div>
          <div class="mb-4">

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout 
  title="PLANY - Professional Fit-out Services"
  description="High-quality fit-out services for commercial and residential spaces with professional approach."
>
  <section id="hero" class="min-h-screen flex items-center bg-background-alt relative">
    <div class="container mx-auto py-20">
      <div class="max-w-3xl">
        <h1 class="text-5xl md:text-6xl font-heading font-bold mb-6">
          {t('hero.title' as any)}
        </h1>
        <p class="text-xl md:text-2xl text-text-light mb-8">
          {t('hero.subtitle' as any)}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#contact" class="btn-primary">{t('hero.cta' as any)}</a>
          <a href="#portfolio" class="btn-secondary">{t('hero.secondary' as any)}</a>
        </div>
      </div>
    </div>
    <div class="absolute inset-0 z-[-1] opacity-20">
      <!-- This would be a background pattern or image -->
    </div>
  </section>

  <section id="about" class="section bg-white">
    <div class="container">
      <div class="section-title">
        <h2>{t('about.title' as any)}</h2>
        <p class="text-xl text-text-light mt-4">{t('about.subtitle' as any)}</p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-lg mb-6">
            {t('about.description' as any)}
          </p>
          
          <div class="grid grid-cols-2 gap-8 mt-8">
            <div class="text-center">
              <span class="text-4xl font-bold text-secondary block">10+</span>
              <span class="text-text-light">{t('about.experience' as any)}</span>
            </div>
            <div class="text-center">
              <span class="text-4xl font-bold text-secondary block">250+</span>
              <span class="text-text-light">{t('about.projects' as any)}</span>
            </div>
            <div class="text-center">
              <span class="text-4xl font-bold text-secondary block">200+</span>
              <span class="text-text-light">{t('about.clients' as any)}</span>
            </div>
            <div class="text-center">
              <span class="text-4xl font-bold text-secondary block">15+</span>
              <span class="text-text-light">{t('about.awards' as any)}</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-200 h-96 rounded-lg">
          <!-- This would be an about image -->
        </div>
      </div>
    </div>
  </section>

  <section id="portfolio" class="section bg-background-alt">
    <div class="container">
      <div class="section-title">
        <h2>{t('portfolio.title' as any)}</h2>
        <p class="text-xl text-text-light mt-4">{t('portfolio.subtitle' as any)}</p>
      </div>
      
      <div class="flex justify-center mb-8">
        <div class="flex flex-wrap justify-center gap-2">
          <button class="px-4 py-2 rounded-full bg-secondary text-white filter-button" data-filter="all">
            {t('portfolio.all' as any)}
          </button>
          <button class="px-4 py-2 rounded-full bg-white text-text hover:bg-gray-100 filter-button" data-filter="commercial">
            {t('portfolio.commercial' as any)}
          </button>
          <button class="px-4 py-2 rounded-full bg-white text-text hover:bg-gray-100 filter-button" data-filter="residential">
            {t('portfolio.residential' as any)}
          </button>
          <button class="px-4 py-2 rounded-full bg-white text-text hover:bg-gray-100 filter-button" data-filter="retail">
            {t('portfolio.retail' as any)}
          </button>
          <button class="px-4 py-2 rounded-full bg-white text-text hover:bg-gray-100 filter-button" data-filter="hospitality">
            {t('portfolio.hospitality' as any)}
          </button>
          <button class="px-4 py-2 rounded-full bg-white text-text hover:bg-gray-100 filter-button" data-filter="office">
            {t('portfolio.office' as any)}
          </button>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 portfolio-container">
        <!-- Portfolio items would go here -->
        <div class="card overflow-hidden group portfolio-item" data-category="commercial">
          <div class="relative h-64 bg-gray-200">
            <!-- Portfolio image -->
            <div class="absolute inset-0 bg-black bg-opacity-60 opacity-0 group-hover:opacity-100 flex items-center justify-center transition-opacity duration-300">
              <a href="#" class="btn-primary">{t('portfolio.viewProject' as any)}</a>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Commercial Office Space</h3>
            <p class="text-text-light">Modern office fit-out for a tech company</p>
          </div>
        </div>
        
        <div class="card overflow-hidden group portfolio-item" data-category="residential">
          <div class="relative h-64 bg-gray-200">
            <!-- Portfolio image -->
            <div class="absolute inset-0 bg-black bg-opacity-60 opacity-0 group-hover:opacity-100 flex items-center justify-center transition-opacity duration-300">
              <a href="#" class="btn-primary">{t('portfolio.viewProject' as any)}</a>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Luxury Apartment</h3>
            <p class="text-text-light">High-end residential fit-out</p>
          </div>
        </div>
        
        <div class="card overflow-hidden group portfolio-item" data-category="retail">
          <div class="relative h-64 bg-gray-200">
            <!-- Portfolio image -->
            <div class="absolute inset-0 bg-black bg-opacity-60 opacity-0 group-hover:opacity-100 flex items-center justify-center transition-opacity duration-300">
              <a href="#" class="btn-primary">{t('portfolio.viewProject' as any)}</a>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">Fashion Boutique</h3>
            <p class="text-text-light">Retail store fit-out in shopping center</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="services" class="section bg-white">
    <div class="container">
      <div class="section-title">
        <h2>{t('services.title' as any)}</h2>
        <p class="text-xl text-text-light mt-4">{t('services.subtitle' as any)}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="w-16 h-16 bg-secondary/10 rounded-full flex items-center justify-center mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
